<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background_main"
    tools:context="com.example.user.wteproject.newResActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Name of the new Res."
        android:id="@+id/nameText"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/adrText"
        android:hint="Address of the new Res."
        android:layout_below="@+id/nameText"
        android:layout_marginTop="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/nameText"
        android:layout_alignEnd="@+id/nameText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_add"
        android:id="@+id/addNewResBtn"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/night_snackcheckin_newRes"
        android:layout_toEndOf="@+id/night_snackcheckin_newRes" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="早餐"
        android:id="@+id/breakfastcheckin_newRes"
        android:checked="false"
        android:layout_below="@+id/imageView7"
        android:layout_alignLeft="@+id/imageView7"
        android:layout_alignStart="@+id/imageView7" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="中餐"
        android:id="@+id/lunchcheckin_newRes"
        android:layout_below="@+id/breakfastcheckin_newRes"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="晚餐"
        android:id="@+id/dinnercheckin_newRes"
        android:layout_below="@+id/lunchcheckin_newRes"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="宵夜"
        android:id="@+id/night_snackcheckin_newRes"
        android:layout_below="@+id/dinnercheckin_newRes"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:checked="false" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar2"
        android:layout_below="@+id/breakfastcheckin_newRes"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="飯食"
        android:id="@+id/riceCheckin_newRes"
        android:checked="false"
        android:layout_above="@+id/progressBar2"
        android:layout_alignLeft="@+id/imageView8"
        android:layout_alignStart="@+id/imageView8" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="其他"
        android:id="@+id/otherCheckin_newRes"
        android:checked="false"
        android:layout_below="@+id/noodleCheckin_newRes"
        android:layout_alignLeft="@+id/noodleCheckin_newRes"
        android:layout_alignStart="@+id/noodleCheckin_newRes" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="麵食"
        android:id="@+id/noodleCheckin_newRes"
        android:checked="false"
        android:layout_below="@+id/riceCheckin_newRes"
        android:layout_alignLeft="@+id/riceCheckin_newRes"
        android:layout_alignStart="@+id/riceCheckin_newRes" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:id="@+id/imageView7"
        android:background="@drawable/word_time"
        android:layout_below="@+id/adrText"
        android:layout_alignLeft="@+id/adrText"
        android:layout_alignStart="@+id/adrText"
        android:layout_marginTop="36dp" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:background="@drawable/word_type"
        android:id="@+id/imageView8"
        android:layout_alignTop="@+id/imageView7"
        android:layout_alignRight="@+id/addNewResBtn"
        android:layout_alignEnd="@+id/addNewResBtn" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView9"
        android:background="@drawable/other"
        android:layout_below="@+id/otherCheckin_newRes"
        android:layout_toRightOf="@+id/progressBar2"
        android:layout_toEndOf="@+id/progressBar2" />

</RelativeLayout>
